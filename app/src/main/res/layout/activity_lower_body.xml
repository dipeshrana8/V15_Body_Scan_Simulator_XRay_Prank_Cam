<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg1"
    android:orientation="vertical"
    tools:context=".spalsh.SelectBodyTypActivity">


    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar_layout"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_header_upper"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="@dimen/_60sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_upper_body"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/frameUpper"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginVertical="@dimen/_5sdp"

                        android:background="@drawable/bg_country_select">

                        <ImageView
                            android:id="@+id/imgUpper"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:elevation="@dimen/_10sdp"
                            android:src="@drawable/ic_selected" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="bottom"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_10sdp"

                            android:text="Upper Body"
                            android:textAllCaps="false"
                            android:textColor="#000000" />


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frameLower"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"

                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@drawable/bg_country_unselect">

                        <ImageView
                            android:id="@+id/imgLower"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:elevation="@dimen/_10sdp"
                            android:src="@drawable/ic_unselected" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="bottom"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_10sdp"

                            android:text="Lower Body"
                            android:textAllCaps="false"
                            android:textColor="#000000" />

                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>


            <FrameLayout
                android:id="@+id/frameNative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_5sdp"

                android:minHeight="@dimen/_180sdp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginVertical="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_x_ray_scanner" />
        </LinearLayout>
    </ScrollView>


    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_next" />
</LinearLayout>