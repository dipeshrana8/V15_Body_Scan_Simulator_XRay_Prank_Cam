<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient Stroke Layer (outer) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#8B8BB1"
                android:startColor="#8B8BB1"
                android:type="linear" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>

    <!-- Inner Background Layer -->
    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#BCBCFF"
                android:startColor="#BCBCFF"
                android:type="linear" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>

</layer-list>
